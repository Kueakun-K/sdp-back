    <br><br>
    <section id="Quote">
        <div class="container">
            <div class="row">
                <div class="col-2">
                    <a href="#"><img src="data:thread/<%= thread.book_img.contentType %>;base64,
                        <%= thread.book_img.data.toString('base64') %>"
                            class="w-100 h-75 img-thumbnail img-fluid mb-2"></a>
                    <div class="d-flex justify-content-center"><a href="#"
                            class="text-black text-decoration-none fw-bolder fs-4"><%= user.user_name %>
                        </a>
                    </div>
                </div>
                <div class="col-10">
                    <div class="card h-100">
                        <div class="card-header fs-4">
                            <%= thread.section %>
                        </div>
                        <div class="card-body">
                            <blockquote class="blockquote mb-0">
                                <p><%= thread.content %></p>
                                <footer class="blockquote-footer">Someone famous in <cite title="Source Title">Source
                                        Title</cite></footer>
                            </blockquote>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <br><br><br><br><br><br><br><br>
    <section id="review">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <p class="border-dark border-bottom fs-4 fw-bolder">ตอบกลับกระทู้</p>
                    <div class="d-flex justify-content-center">
