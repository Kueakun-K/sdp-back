    <section id="Leaderboard">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col"></th>
                                <th scope="col">Name</th>
                                <th scope="col">Points</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if(board.length < 10) { %>
                                <% for(var i =0; i< board.length; i++) { %>
                            <tr>
                                <th scope="row"><p class="mt-3"><%= i+1 %></p></th>
                                <td><i class="bi bi-person-circle" style="font-size: 42px;"></i></td>
                                <td><p class="mt-3"><%= board[i].user_name %></p></td>
                                <td><p class="mt-3"><%= board[i].user_point %></p></td>
                            </tr>
                                <% } %>
                            <% } %>
                            <% if(board.length > 9) { %>
                                <% for(var i =0; i< 10; i++) { %>
                            <tr>
                                <th scope="row"><p class="mt-3"><%= i+1 %></p></th>
                                <td><i class="bi bi-person-circle" style="font-size: 42px;"></i></td>
