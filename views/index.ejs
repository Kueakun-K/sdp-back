                        <a href="/book/<%= ratebook[i]._id %>" class="text-black text-start text-decoration-none"><%= ratebook[i].book_name %></a>
                        <div class="d-flex justify-content-between my-2">
                            <div>
                                <% for(var star = 0;star < Math.round(ratebook[i].book_rate);star++){ %>
                                <i class="bi bi-star-fill" style='color: yellow'></i>
                                <% } %>
                                <% for(var nonstar = 5;nonstar > Math.round(ratebook[i].book_rate);nonstar--){ %>
                                <i class="bi bi-star"></i> 
                                <% } %>
                            </div>
                            <div>
                                <button type="button" class="btn btn-success btn-sm" data-bs-toggle="modal"
                                    data-bs-target="#exampleModal"><%= ratebook[i].book_price %> ฿
