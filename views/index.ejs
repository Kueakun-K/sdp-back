<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HOME</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.1.1/css/all.css"
        integrity="sha384-/frq1SRXYH/bSyou/HUp/hib7RVN1TawQYja658FEOodR/FQBKVqT9Ol+Oz3Olq5" crossorigin="anonymous" />
</head>

<body style="height: 5000px;">
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container">
            <div class="p-5">
                <a href="/" class="navbar-brand fs-3 fw-normal">AHEY LIBRARY</a>
            </div>
            <div class="p-5 justify-content-center">
                <form action="/search" method="get">
                    <input type="text" class="form-control" placeholder="Search" style="width: 480px;" name="bookname" />
                    <input type="submit" hidden />
                </form>
            </div>
            <div class="p-5 justify-content-end">
                <% if( user == undefined) { %>
                    <a href="/login" class="btn btn-dark"><svg xmlns="http://www.w3.org/2000/svg" width="36" height="36"
                            fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                            <path
                                d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z" />
                    </svg></a>
                <% } %>
                <% if( user != undefined) { %>
                    <a href="../profile/<%= user._id %>" class="btn btn-dark"><%= user.user_name %></a>
                    <a href="/logout" class="btn btn-dark"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-right" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0v2z"></path>
                        <path fill-rule="evenodd" d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z"></path>
                      </svg></a>
                <% } %>
            </div>
        </div>
    </nav>
    <nav class="navbar navbar-expand-sm navbar-dark bg-secondary sticky-top">
        <div class="container">
            <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbar1">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="navbar1" class="collapse navbar-collapse">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item me-5">
                        <a href="/" class="nav-link">หน้าแรก</a>
                    </li>
                    <li class="nav-item me-5">
                        <a href="/category/novel" class="nav-link">นิยาย</a>
                    </li>
                    <li class="nav-item me-5">
                        <a href="/category/general" class="nav-link">หนังสือทั่วไป</a>
                    </li>
                    <li class="nav-item me-5">
                        <a href="/category/children" class="nav-link">หนังสือเด็ก</a>
                    </li>
                    <li class="nav-item me-5">
                        <a href="/category/manga" class="nav-link">การ์ตูน</a>
                    </li>
                    <li class="nav-item me-5">
                        <a href="/board" class="nav-link">กระดาน</a>
                    </li>
                    <li class="nav-item me-5">
                        <a href="/thread" class="nav-link">กระทู้</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <br>
    <section id="slider">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="carousel slide" data-bs-ride="carousel" id="mySlider">
                        <ol class="carousel-indicators">
                            <button data-bs-target="#mySlider" data-bs-slide-to="0" class="active"></button>
                            <button data-bs-target="#mySlider" data-bs-slide-to="1"></button>
                            <button data-bs-target="#mySlider" data-bs-slide-to="2"></button>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <a href="https://www.facebook.com/bookthai/"><img
                                        src="https://storage-wp.thaipost.net/2022/03/%E0%B8%87%E0%B8%B2%E0%B8%99%E0%B8%AB%E0%B8%99%E0%B8%B1%E0%B8%87%E0%B8%AA%E0%B8%B7%E0%B8%AD.jpg"
                                        class="d-block w-100 img-fluid"></a>
                            </div>
                            <div class="carousel-item">
                                <a href="https://www.facebook.com/bookthai/"><img
                                        src="https://storage-wp.thaipost.net/2022/03/%E0%B8%87%E0%B8%B2%E0%B8%99%E0%B8%AB%E0%B8%99%E0%B8%B1%E0%B8%87%E0%B8%AA%E0%B8%B7%E0%B8%AD.jpg"
                                        class="d-block w-100 img-fluid"></a>
                            </div>
                            <div class="carousel-item">
                                <a href="https://www.facebook.com/bookthai/"><img
                                        src="https://storage-wp.thaipost.net/2022/03/%E0%B8%87%E0%B8%B2%E0%B8%99%E0%B8%AB%E0%B8%99%E0%B8%B1%E0%B8%87%E0%B8%AA%E0%B8%B7%E0%B8%AD.jpg"
                                        class="d-block w-100 img-fluid"></a>
                            </div>
                            <button class="carousel-control-prev" data-bs-target="#mySlider" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon"></span>
                            </button>
                            <button class="carousel-control-next" data-bs-target="#mySlider" data-bs-slide="next">
                                <span class="carousel-control-next-icon"></span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <br>
    <% if( rentbook.length > 0) { %>
    <section id="rent">
        <div class="container">
            <div class="border-dark border-bottom fs-4 fw-normal py-2">กำลังเช่า</div>
            <div class="row my-2">
                <% for(var i = 0;i < rentbook.length;i++){ %>
                <div class="col-md-2">
                    <a href="/book/<%= rentbook[i]._id %>"><img
                            src="data:rentbook[i]/<%= rentbook[i].book_img.contentType %>;base64,
                            <%= rentbook[i].book_img.data.toString('base64') %>"
                            class="d-block w-100 h-75 img-thumbnail img-fluid mb-2"></a>
                    <a href="/book/<%= rentbook[i]._id %>" class="text-black text-start text-decoration-none"><%= rentbook[i].book_name %></a>
                    <div class="d-flex justify-content-between my-2">
                        <div>
                            <% for(var star = 0;star < Math.round(rentbook[i].book_rate);star++){ %>
                            <i class="bi bi-star-fill" style='color: yellow'></i>
                            <% } %>
                            <% for(var nonstar = 5;nonstar > Math.round(rentbook[i].book_rate);nonstar--){ %>
                            <i class="bi bi-star"></i> 
                            <% } %>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </section>
    <br><br>
    <% } %>

    <section id="new">
        <div class="container">
            <div class="border-dark border-bottom fs-4 fw-normal py-2">มาใหม่</div>
            <div class="row my-2">
                <% for(var i = 0;i < 6;i++){ %>
                <div class="col-md-2">
                    <a href="/book/<%= newbook[i]._id %>"><img
                            src="data:newbook[i]/<%= newbook[i].book_img.contentType %>;base64,
                            <%= newbook[i].book_img.data.toString('base64') %>"
                            class="d-block w-100 h-75 img-thumbnail img-fluid mb-2"></a>
                    <a href="/book/<%= newbook[i]._id %>" class="text-black text-start text-decoration-none"><%= newbook[i].book_name %></a>
                    <div class="d-flex justify-content-between my-2">
                        <div>
                            <% for(var star = 0;star < Math.round(newbook[i].book_rate);star++){ %>
                            <i class="bi bi-star-fill" style='color: yellow'></i>
                            <% } %>
                            <% for(var nonstar = 5;nonstar > Math.round(newbook[i].book_rate);nonstar--){ %>
                            <i class="bi bi-star"></i> 
                            <% } %>
                        </div>
                        <div>
                            <button type="button" class="btn btn-success btn-sm" data-bs-toggle="modal"
                                data-bs-target="#exampleModal"><%= newbook[i].book_price %> ฿
                            </button>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </section>
    <br><br>

    <section id="popular">
        <div class="container">
            <div class="border-dark border-bottom fs-4 fw-normal py-2">ยอดนิยม</div>
            <div class="row my-2">
                <% for(var i = 0;i < 6;i++){ %>
                    <div class="col-md-2">
                        <a href="/book/<%= viewbook[i]._id %>"><img
                                src="data:viewbook[i]/<%= viewbook[i].book_img.contentType %>;base64,
                                <%= viewbook[i].book_img.data.toString('base64') %>"
                                class="d-block w-100 h-75 img-thumbnail img-fluid mb-2"></a>
                        <a href="/book/<%= viewbook[i]._id %>" class="text-black text-start text-decoration-none"><%= viewbook[i].book_name %></a>
                        <div class="d-flex justify-content-between my-2">
                            <div>
                                <% for(var star = 0;star < Math.round(viewbook[i].book_rate);star++){ %>
                                <i class="bi bi-star-fill" style='color: yellow'></i>
                                <% } %>
                                <% for(var nonstar = 5;nonstar > Math.round(viewbook[i].book_rate);nonstar--){ %>
                                <i class="bi bi-star"></i> 
                                <% } %>
                            </div>
                            <div>
                                <button type="button" class="btn btn-success btn-sm" data-bs-toggle="modal"
                                    data-bs-target="#exampleModal"><%= viewbook[i].book_price %> ฿
                                </button>
                            </div>
                        </div>
                    </div>
                    <% } %>
            </div>
        </div>
    </section>
    <br><br>
    <section id="recommend">
        <div class="container">
            <div class="border-dark border-bottom fs-4 fw-normal py-2">แนะนำ</div>
            <div class="row my-2">
                <% for(var i = 0;i < 6;i++){ %>
                    <div class="col-md-2">
                        <a href="/book/<%= ratebook[i]._id %>"><img
                                src="data:ratebook[i]/<%= ratebook[i].book_img.contentType %>;base64,
                                <%= ratebook[i].book_img.data.toString('base64') %>"
                                class="d-block w-100 h-75 img-thumbnail img-fluid mb-2"></a>
                        <a href="/book/<%= ratebook[i]._id %>" class="text-black text-start text-decoration-none"><%= ratebook[i].book_name %></a>
                        <div class="d-flex justify-content-between my-2">
                            <div>
                                <% for(var star = 0;star < Math.round(ratebook[i].book_rate);star++){ %>
                                <i class="bi bi-star-fill" style='color: yellow'></i>
                                <% } %>
                                <% for(var nonstar = 5;nonstar > Math.round(ratebook[i].book_rate);nonstar--){ %>
                                <i class="bi bi-star"></i> 
                                <% } %>
                            </div>
                            <div>
                                <button type="button" class="btn btn-success btn-sm" data-bs-toggle="modal"
                                    data-bs-target="#exampleModal"><%= ratebook[i].book_price %> ฿
                                </button>
                            </div>
                        </div>
                    </div>
                    <% } %>
            </div>
        </div>
    </section>
</body>

</html>