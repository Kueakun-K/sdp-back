    <br>
    <section id="slider">
        <div class="container">
            <form action="/book/postbook" method="POST" enctype="multipart/form-data" id="formaddbook">
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">เพิ่มหนังสือ</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                        <div class="mb-3">
                                            <label for="recipient-name" class="col-form-label">ชื่อหนังสือ</label>
                                            <input type="text" class="form-control"  name="book_name">
                                        </div>
                                        <div class="mb-3">
                                            <label for="recipient-name" class="col-form-label">ประเภท</label>
                                            <select class="form-select" aria-label="Default select example" name="book_tag">
                                                <option selected value="general">หนังสือทั่วไป</option>
                                                <option value="novel">นิยาย</option>
                                                <option value="children">หนังสือเด็ก</option>
                                                <option value="manga">การ์ตูน</option>
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <label for="recipient-name" class="col-form-label">คำอธิบาย</label>
                                            <input type="text" class="form-control"  name="book_description" >
                                        </div>
                                        <div class="mb-3">
                                            <label for="recipient-name" class="col-form-label">ราคา</label>
                                            <input type="text" class="form-control"  name="book_price">
                                        </div>
                                        <div class="mb-3">
                                            <label for="recipient-name" class="col-form-label">รูปหนังสือ</label>
                                            <input class="form-control" type="file" id="formFile" name="multiimg[]" multiple>
                                        </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ยกเลิก</button>
                                    <button type="submit" class="btn btn-success" >สร้าง</button>
                                </div>
                            </div>
                    </form>
                        </div>
                    </div>
                
            <div class="row">
                <div class="col-12">
                    <div class="carousel slide" data-bs-ride="carousel" id="mySlider">
                        <ol class="carousel-indicators">
                            <button data-bs-target="#mySlider" data-bs-slide-to="0" class="active"></button>
                            <button data-bs-target="#mySlider" data-bs-slide-to="1"></button>
                            <button data-bs-target="#mySlider" data-bs-slide-to="2"></button>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <a href="https://www.facebook.com/bookthai/"><img
                                        src="/images/bookevent.jpg"
                                        class="d-block w-100 img-fluid"></a>
                            </div>
                            <div class="carousel-item">
                                <a href="https://www.facebook.com/bookthai/"><img
                                        src="/images/bookevent.jpg"
                                        class="d-block w-100 img-fluid"></a>
                            </div>
                            <div class="carousel-item">
                                <a href="https://www.facebook.com/bookthai/"><img
                                        src="/images/bookevent.jpg"
                                        class="d-block w-100 img-fluid"></a>
                            </div>
                            <button class="carousel-control-prev" data-bs-target="#mySlider" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon"></span>
                            </button>
                            <button class="carousel-control-next" data-bs-target="#mySlider" data-bs-slide="next">
                                <span class="carousel-control-next-icon"></span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <br>
    <% if( user != undefined) { %>
        <% if( user.user_Role == 'Admin') { %>
    <div class="d-flex justify-content-center">
    <button type="button" class="btn btn-success mb-2" data-bs-toggle="modal" data-bs-target="#exampleModal"
                    data-bs-whatever="@mdo">เพิ่มหนังสือ</button>
                </div>
        <% } %>
    <% } %>
    <% if( rentbook.length > 0) { %>
    <section id="rent">
        <div class="container">
            <div class="border-dark border-bottom fs-4 fw-normal py-2">กำลังเช่า</div>
            <div class="row my-2">
                <% for(var i = 0;i < rentbook.length;i++){ %>
                <div class="col-md-2">
                    <a href="/book/<%= rentbook[i]._id %>"><img
                            src="data:rentbook[i]/<%= rentbook[i].book_img.contentType %>;base64,
                            <%= rentbook[i].book_img.data.toString('base64') %>"
                            class="d-block w-100 h-75 img-thumbnail img-fluid mb-2"></a>
                    <a href="/book/<%= rentbook[i]._id %>" class="text-black text-start text-decoration-none"><%= rentbook[i].book_name %></a>
                    <div class="d-flex justify-content-between my-2">
                        <div>
                            <% for(var star = 0;star < Math.round(rentbook[i].book_rate);star++){ %>
                            <i class="bi bi-star-fill" style='color: yellow'></i>
                            <% } %>
                            <% for(var nonstar = 5;nonstar > Math.round(rentbook[i].book_rate);nonstar--){ %>
                            <i class="bi bi-star"></i> 
                            <% } %>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </section>
    <br><br>
    <% } %>

    <section id="new">
        <div class="container">
            
            <div class="border-dark border-bottom fs-4 fw-normal py-2">มาใหม่</div>
            <div class="row my-2">
                <% for(var i = 0;i < num;i++){ %>
                <div class="col-md-2">
                    <a href="/book/<%= newbook[i]._id %>"><img
                            src="data:newbook[i]/<%= newbook[i].book_img.contentType %>;base64,
                            <%= newbook[i].book_img.data.toString('base64') %>"
                            class="d-block w-100 h-75 img-thumbnail img-fluid mb-2"></a>
                    <a href="/book/<%= newbook[i]._id %>" class="text-black text-start text-decoration-none"><%= newbook[i].book_name %></a>
                    <div class="d-flex justify-content-between my-2">
                        <div>
                            <% for(var star = 0;star < Math.round(newbook[i].book_rate);star++){ %>
                            <i class="bi bi-star-fill" style='color: yellow'></i>
                            <% } %>
                            <% for(var nonstar = 5;nonstar > Math.round(newbook[i].book_rate);nonstar--){ %>
