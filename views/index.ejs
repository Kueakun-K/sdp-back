                                <% } %>
                                <% for(var nonstar = 5;nonstar > Math.round(pricebook[i].book_rate);nonstar--){ %>
                                <i class="bi bi-star"></i> 
                                <% } %>
                            </div>
                            <div>
                                <button type="button" class="btn btn-success btn-sm" data-bs-toggle="modal"
                                    data-bs-target="#exampleModal"><%= pricebook[i].book_price %> ฿
                                </button>
                            </div>
                        </div>
                    </div>
                    <% } %>
            </div>
        </div>
    </section>
    <br><br>
